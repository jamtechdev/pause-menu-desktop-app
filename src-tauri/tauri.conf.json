{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pause Menu",
  "version": "1.0.0",
  "identifier": "com.jamtech.pause-menu",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Pause Menu",
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "focusable": true,
        "visible": false,
        "resizable": false,
        "width": 1920,
        "height": 1080
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Â© 2026 JamTech. All rights reserved.",
    "category": "Productivity",
    "shortDescription": "Pause Menu - Your productivity command center",
    "longDescription": "Pause Menu is a powerful productivity tool that helps you manage your workflow, documents, and tasks efficiently. Access everything you need with a single keyboard shortcut.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "allowDowngrades": false,
      "nsis": {}
    }
  },
  "plugins": {}
}
